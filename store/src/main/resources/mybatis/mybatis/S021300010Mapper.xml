<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="S021300010">
    <select id="retrieveCode" resultType="java.util.Map" parameterType="com.swontech.s02.domain.dto.S021.S021300010Dto.RetrieveWord">
        SELECT  /* S021300010코드관리화면 코드 조회 S021300010.retrieveCode Created By MSH */
                CD_TP, 		                                                -- 코드
                CD_TP_MEANING, 	                                            -- 코드명
                CD_V, 		                                                -- 코드값
                CD_V_MEANING, 	                                            -- 코드값명
                CATEGORY,		                                            -- 카테고리
                CATEGORY_NM,		                                        -- 카테고리명
                DECODE(DATA_END_STATUS, NULL, NULL, 'Y') DATA_END_STATUS    -- 종료여부
        FROM    TB_S020.TB_S020_CODE010 CODE
        <if test='orgId != null and orgId != ""'>
        WHERE   ORG_ID = #{orgId}                                           -- 검색조건의 조직ID
        </if>
        <if test='cdTp != null and cdTp != ""'>
        AND     CD_TP LIKE '%'|| #{cdTp} ||'%'	                            -- 검색조건의 코드
        </if>
        <if test='cdTpMeaning != null and cdTpMeaning != ""'>
        AND     CD_TP_MEANING LIKE '%'|| #{cdTpMeaning} ||'%'               -- 검색조건의 코드명
        </if>

    </select>
</mapper>
